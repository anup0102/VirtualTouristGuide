<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android= "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

<RelativeLayout
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ll1"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/AudioBtn"
            android:src="@drawable/audio_button"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/LocBtn"
            android:src="@drawable/location"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/ll1"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="Taj Mahal"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rlbuilt"
        android:layout_margin="4dp"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/builth"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Built:      "/>

        <TextView
            android:id="@+id/builtc"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/builth"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlloc"
        android:layout_below="@id/rlbuilt"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/loch"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Location:      "/>

        <TextView
            android:id="@+id/locc"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/loch"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlarch"
        android:layout_below="@id/rlloc"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/archh"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Architectural Style:    "/>

        <TextView
            android:id="@+id/archc"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/archh"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlarea"
        android:layout_margin="4dp"
        android:layout_below="@id/rlarch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/areah"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Area:      "/>

        <TextView
            android:id="@+id/areac"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/areah"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlabout"
        android:layout_margin="4dp"
        android:layout_below="@id/rlarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/abouth"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="About:      "/>

        <TextView
            android:id="@+id/aboutc"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/abouth"/>

    </RelativeLayout>

</RelativeLayout>

</ScrollView>